# =================================
# AI Agent TRPG GM - 環境設定例
# =================================

# 基本設定
NODE_ENV=development
PORT=4001
FRONTEND_PORT=3000

# データベース設定
DATABASE_PATH=./data/trpg.db

# Litestream設定（バックアップ）
LITESTREAM_S3_BUCKET=your-backup-bucket
LITESTREAM_S3_REGION=us-east-1
LITESTREAM_S3_ACCESS_KEY_ID=your-access-key-id
LITESTREAM_S3_SECRET_ACCESS_KEY=your-secret-access-key
LITESTREAM_S3_ENDPOINT=https://s3.amazonaws.com
LITESTREAM_RESTORE_ON_STARTUP=false

# AI プロバイダー設定
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-pro

# セキュリティ設定
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Google Cloud設定（本番環境）
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_BUCKET=your-storage-bucket

# 監視・ログ設定
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Redis設定（セッション管理）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# WebSocket設定
WEBSOCKET_PORT=4002
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# メール設定（通知用）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@your-domain.com

# 外部API設定
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRIES=3

# 開発者モード設定
DEVELOPER_MODE=true
DEBUG_AI_REQUESTS=false
DEBUG_DATABASE_QUERIES=false
DEBUG_WEBSOCKET_EVENTS=false

# パフォーマンス設定
MAX_CONCURRENT_AI_REQUESTS=5
AI_REQUEST_TIMEOUT=60000
DATABASE_POOL_SIZE=10
UPLOAD_MAX_FILE_SIZE=10485760

# 機能フラグ
FEATURE_AI_AGENT_MONITORING=true
FEATURE_PARTY_MOVEMENT=true
FEATURE_MILESTONE_SYSTEM=true
FEATURE_ENTITY_MANAGEMENT=true
FEATURE_CONVERSATION_SYSTEM=true